{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint-staged": {
      "*.{js,ts,tsx}": [
        "yarn prettier",
        "eslint --cache --fix",
        "yarn i18n:scan"
      ],
      "*.yml": [
        "prettier --write"
      ]
    },
    "dev": {
      "cache": false
    },
    "relay": {
      "cache": false
    },
    "relay:web": {
      "cache": false,
      "dependsOn": ["relay"]
    },
    "relay:admin": {
      "cache": false,
      "dependsOn": ["relay"]
    }
  }
}
